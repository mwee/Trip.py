<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @trip.title %>
</p>

<p>
  <strong>Destination:</strong>
  <%= @trip.destination %>
</p>
<p>
  <strong>Description:</strong>
  <%= @trip.description %>
</p>
<p>
  <strong>Created by:</strong>
  <%= @trip.creator.name %>
</p>

<p>
  <strong>Other participants:</strong>
  <% @trip.users.each do |participant|%> 
     <%= participant.name %>
   <% end %>
</p>

<p>
  <strong>Estimated cost per person:</strong>
  From $<%= @trip.cost_min %> to $<%= @trip.cost_max %>
</p>

<p>
  <strong>Date:</strong>
  From <%= @trip.start_date %> to <%= @trip.end_date %> 
</p>


<%= link_to 'Edit', edit_trip_path(@trip) %> |
<%= link_to 'Back', trips_path %>

<%= render "activities/index" %>
