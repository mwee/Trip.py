<h1>Your trips</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Destination</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.title %></td>
        <td><%= trip.destination %></td>
        <td><%= link_to ' Show ', trip %></td>
        <td><%= link_to ' Edit ', edit_trip_path(trip) %></td>
		<% if @user.is_trip_creator(trip) %>
        <td><%= link_to ' Delete ', trip, method: :delete, data: { confirm: 'Are you sure that you want to delete this trip?' } %></td>
		<% else %>
		<td><%= link_to ' Leave cabal ', trip, method: :delete, data: { confirm: 'Are you sure that you want to leave the cabal?' } %></td>
		<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trip', new_trip_path %>
