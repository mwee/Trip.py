<%= form_for(@trip) do |f| %>
	<!--shows the error feedback message!-->
	<% if @trip.errors.any? %>
		    <div class="alert alert-error">
			    <button type="button" class="close" data-dismiss="alert">&times;</button>	
	            <p>
			    <%- for error in @trip.errors.full_messages do %>
				    <li><%= error %></li>
				<%- end %>
			    </p>
			
		    </div>
	<% end %>
<div class="right_body">
  <div class="field right_section">
    <%= f.label :trip_title %>
    <%= f.text_field :title %>
  </div>
  <div class="field right_section">
	<%= f.label :destination %>
    <%= f.text_field :destination %>
  </div>
    <div class="field right_section">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="field right_section">
    <%= f.label :picture_link %>
    <%= f.text_field :link %>
  </div>
    <div class="field right_section">
    <%= f.label :start_date %>
    <%= f.date_select :start_date %>
  </div>
    <div class="field right_section">
    <%= f.label :end_date %>
    <%= f.date_select :end_date %>
  </div>
  <div class="field right_section">
    <%= f.label :picture_link %>
    <%= f.text_field :link %>
  </div>
  
  
  <div class="field right_section">
    Estimated cost per person
    <%= f.label :_from %>
    $ <%= f.text_field :cost_min %>
    <%= f.label :_to %>
    $ <%= f.text_field :cost_max %>
  </div>
  <div id="tripCreate" class="actions btn btn-primary">
    <%= f.submit %>
  </div>
</div>  
<% end %>
