<h1>Listing Activities</h1>
<table>
  <thead>
    <tr>
      <th>Activities</th>
      <th>Like</th>
      <th>Dislike</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.topic %></td>
        <td><%= link_to 'Like', like_activity_path(activity), remote: true %></td>
        <td><%= link_to 'Dislike', dislike_activity_path(activity), remote: true%></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

