<div class="right_title">
	Your Profile
</div>

<div class="right_body">
	<div class="right_section">
		<div>
			<div class="user_info>">
				<h3 class="right_label">Dream Destinations:</h3>
				<div class="right_answers">
					<% if !@current_user.destination.nil? %>
					<p   class="right_answers_p">
						<%= @current_user.destination %>
					</p>
					<% else %>
					<p   class="right_answers_p">
						No destinations.
					</p>
					<% end%>
					</h3>
				</div>
			</div>

			<div class="right_changes">
				<% if @current_user.id==current_user.id %>
				<div id ="updateDestination"class="btn btn-medium ">
					Update Destinations
				</div>
				<% end %>
			</div>
		</div>

		<br>

		<div id="updatingDestinations" class="popUp" style="display: none;">
			<%= render :template => 'users/edit_destination' -%>
		</div>

	</div>

	<div class="right_section">

		<div class="user_info>">
			<h3 class="right_label">Budget range: </h3>
			<div class="right_answers">
				<% if (!@current_user.budget_in_min.nil?) || (!@current_user.budget_in_max.nil?) %>
				<p class="right_answers_p">
					In country : $ <%= @current_user.budget_in_min %> to $ <%= @current_user.budget_in_max %>
				</p>
				<p class="right_answers_p">
					Out of country : $ <%= @current_user.budget_out_min %> to $ <%= @current_user.budget_out_max %>
				</p>
				<% else %>
				<p class="right_answers_p">
					No budget.
				</p>
				<% end %>
			</div>
		</div>

		<div class="right_changes">
			<div id ="updateBudget"class="btn btn-medium ">
				Update Budget
			</div>
		</div>
		<br>

		<div id="updatingBudget" class="popUp" style="display: none;">
			<%= render :template => 'users/edit_budget' -%>
		</div>

	</div>

	<div class="right_section">

		<h3 class="right_label">Availability: </h3>
		<div class="right_answers">
			<% if !@freeranges.nil? %>
			<p class="right_answers_p">
				<%= render :template => 'freeranges/index', :locals => { :freeranges => @freeranges}  %>
			</p> 
			<%= render partial: "freeranges/showcalendar", locals: {freedates: Freerange.get_all_free_dates(@current_user)} %>
			<% else %>
			<p class="right_answers_p">
				No free ranges.
			</p>
			<% end %>
		</div>


		<div class="right_changes">   

               <%= button_to "Add a free range", new_freerange_path, :id => "addRange", :class => "btn btn-medium" %>     
	   </div>
</div>