<div class="panel-heading">
	<div class="right_title"> 
		<a data-toggle="collapse" data-parent="#accordion" data-target="#<%= usershown.id %>">
					  <span href="/" class="navbar-brand">
		                <img src="/images/arrowdown.png" alt="Expand">
		            </span>
		            
			</a>
	<%= usershown.name %>
	
	<button type="button" class="btn btn-danger" data-toggle="collapse" data-target="#<%= usershown.id %>">
  Expand/Collapse
</button>
	</div>
</div>




<div id="<%= usershown.id %>" class="collapse in">
	  <div class="panel-body">
<!--div class="right_body"-->
	<div class="right_section">
		<div class="user_info>">
			<h3 class="right_label">Dream Destinations:</h3>
			<div class="right_answers">
			<p   class="right_answers_p">
				<% if !usershown.destination.nil? %>
				   <%= usershown.destination %> 
				<% else %>
				   No destinations.
				<% end%>
			</p>
			</div>	
		</div>  
	 </div>


	<div class="right_section">
		<div class="user_info>">
				<h3 class="right_label">Budget range: </h3>
				<div class="right_answers">
				<% if (!usershown.budget_in_min.nil?) || (!usershown.budget_in_max.nil?) %>
					<p class="right_answers_p"> In country : $ <%= usershown.budget_in_min %> to $ <%= usershown.budget_in_max %>  </p>
					<p class="right_answers_p"> Out of country : $ <%= usershown.budget_out_min %> to $ <%= usershown.budget_out_max %>  </p>
				<% else %>
					<p class="right_answers_p"> No budget.</p>	
				<% end %>
				</div>
		</div>
	</div>

	<div class="right_section">	
	  <h3 class="right_label">Availability: </h3>
		<div class="right_answers">
		<% if !usershown.freeranges.nil? %>
			<%= render partial: "freeranges/showcalendar", locals: {freedates: Freerange.get_all_free_dates(usershown)} %>          			
		<% else %>
			<p class="right_answers_p"> No free ranges.</p>	
		<% end %>
		</div>        
	</div>

<!--/div-->
    </div>
  </div>