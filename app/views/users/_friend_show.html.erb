<div class="right_title"> <%= @user.name %></div>
<div class="right_body">

<div class="right_section">
	<div class="user_info>">
	<h3 class="right_label">Dream Destinations:</h3>

	<div class="right_answers">
			<% if !@user.destination.nil? %>
			  <p   class="right_answers_p"> <%= @user.destination %>  </p>
			<% else %>
			   <p   class="right_answers_p"> No destinations.</p>
			<% end%>
			</h3>
    </div>	
    </div>

 </div>


<div class="right_section">
	<h3 class="right_label">Budget range: </h3>

    <div class="right_answers">
	<% if (!@user.budget_in_min.nil?) || (!@user.budget_in_max.nil?) %>
		<p class="right_answers_p"> In country : $ <%= @user.budget_in_min %> to $ <%= @user.budget_in_max %>  </p>
		<p class="right_answers_p"> Out of country : $ <%= @user.budget_out_min %> to $ <%= @user.budget_out_max %>  </p>
	<% else %>
		   <p class="right_answers_p"> No budget.</p>	
	<% end %>
    </div>
</div>


<div class="right_section">
    <h3 class="right_label">Availability: </h3>
    <div class="right_answers">
   	<% if !@user.freeranges.nil? %>
	    <p class="right_answers_p"> <% render 'freeranges/index', :freeranges => @user.freeranges %> </p>
	<% else %>
	    <p class="right_answers_p"> No free ranges.</p>	
	<% end %>
    </div>
</div>
</div>